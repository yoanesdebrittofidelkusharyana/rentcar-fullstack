@model RentCarApp.Models.RegisterViewModel

@{
    Layout = null; /* Kita tidak pakai layout utama dulu agar fokus */
}

<!DOCTYPE html>
<html>
<head>
    <title>Registrasi - RentCar</title>
    <style>
        body {
            font-family: sans-serif;
            background-color: #f0f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            width: 400px;
        }
        h2 { text-align: center; color: #333; }
        .form-group { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; color: #666; }
        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box; /* Agar padding tidak melebarkan input */
        }
        button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover { background-color: #0056b3; }
        .error { color: red; font-size: 12px; }
        .link { text-align: center; margin-top: 15px; display: block; }
    </style>
</head>
<body>

    <div class="container">
        <h2>Registrasi ke RentCar</h2>

        @if (ViewBag.Error != null)
        {
            <p style="color:red; text-align:center;">@ViewBag.Error</p>
        }

        <form asp-action="Register" method="post">
            <div class="form-group">
                <label>Nama Lengkap</label>
                <input asp-for="Name" placeholder="Masukkan nama lengkap Anda" />
                <span asp-validation-for="Name" class="error"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" placeholder="Masukkan email Anda" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" placeholder="Masukkan password Anda" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="form-group">
                <label>Re-Password</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Masukkan kembali password Anda" />
                <span asp-validation-for="ConfirmPassword" class="error"></span>
            </div>

            <div class="form-group">
                <label>Nomor Telepon</label>
                <input asp-for="PhoneNumber" placeholder="Masukkan nomor telepon Anda" />
                <span asp-validation-for="PhoneNumber" class="error"></span>
            </div>

            <div class="form-group">
                <label>Alamat</label>
                <input asp-for="Address" placeholder="Masukkan alamat Anda" />
                <span asp-validation-for="Address" class="error"></span>
            </div>

            <button type="submit">Registrasi</button>
        </form>

        <a href="/Account/Login" class="link">Sudah punya akun? Login disini</a>
    </div>

</body>
</html>